@model Project1.WebUI.ViewModels.CustomerViewModel

@{
    ViewData["Title"] = "Customers";
}
<h1>Search</h1>

<h4>Customers</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchFound">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Enter a name: </label>
                <input type="text" id="fullName" name="Enter a name:" />
            </div>
            <div class="form-group">
                <input type="submit" id="Search" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
